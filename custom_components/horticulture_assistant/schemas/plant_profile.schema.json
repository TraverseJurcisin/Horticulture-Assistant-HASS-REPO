{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Plant Profile",
  "additionalProperties": true,
  "required": [
    "plant_id",
    "display_name",
    "library",
    "local"
  ],
  "properties": {
    "plant_id": {
      "type": "string",
      "minLength": 1
    },
    "display_name": {
      "type": "string",
      "minLength": 1
    },
    "profile_type": {
      "type": "string"
    },
    "library": {
      "type": "object",
      "required": ["profile_id", "profile_type"],
      "additionalProperties": true,
      "properties": {
        "profile_id": {"type": "string", "minLength": 1},
        "profile_type": {"type": "string", "minLength": 1},
        "tenant_id": {"type": ["string", "null"]},
        "identity": {"type": "object", "additionalProperties": true},
        "taxonomy": {"type": "object", "additionalProperties": true},
        "parents": {
          "type": "array",
          "items": {"type": "string"}
        },
        "curated_targets": {"type": "object", "additionalProperties": true},
        "diffs_vs_parent": {"type": "object", "additionalProperties": true},
        "policies": {"type": "object", "additionalProperties": true},
        "stable_knowledge": {"type": "object", "additionalProperties": true},
        "lifecycle": {"type": "object", "additionalProperties": true},
        "traits": {"type": "object", "additionalProperties": true},
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        },
        "metadata": {"type": "object", "additionalProperties": true},
        "created_at": {"type": ["string", "null"]},
        "updated_at": {"type": ["string", "null"]}
      }
    },
    "local": {
      "type": "object",
      "required": ["general", "local_overrides", "resolver_state"],
      "additionalProperties": true,
      "properties": {
        "species": {"type": ["string", "null"]},
        "general": {"type": "object", "additionalProperties": true},
        "local_overrides": {"type": "object", "additionalProperties": true},
        "resolver_state": {"type": "object", "additionalProperties": true},
        "citations": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "metadata": {"type": "object", "additionalProperties": true},
        "last_resolved": {"type": ["string", "null"]},
        "created_at": {"type": ["string", "null"]},
        "updated_at": {"type": ["string", "null"]}
      }
    },
    "resolved_targets": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["value", "annotation"],
        "additionalProperties": true,
        "properties": {
          "value": {},
          "annotation": {
            "type": "object",
            "required": ["source_type"],
            "additionalProperties": true,
            "properties": {
              "source_type": {"type": "string"},
              "source_ref": {
                "type": "array",
                "items": {"type": "string"}
              },
              "method": {"type": ["string", "null"]},
              "confidence": {"type": ["number", "null"]},
              "staleness_days": {"type": ["number", "null"]},
              "is_stale": {"type": "boolean"},
              "overlay": {},
              "overlay_provenance": {
                "type": "array",
                "items": {"type": "string"}
              },
              "overlay_source_type": {"type": ["string", "null"]},
              "overlay_source_ref": {
                "type": "array",
                "items": {"type": "string"}
              },
              "overlay_method": {"type": ["string", "null"]},
              "extras": {"type": "object", "additionalProperties": true}
            }
          },
          "citations": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true
            }
          }
        }
      }
    },
    "computed_stats": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "general": {"type": "object", "additionalProperties": true},
    "citations": {
      "type": "array",
      "items": {"type": "object", "additionalProperties": true}
    },
    "thresholds": {"type": "object", "additionalProperties": true},
    "variables": {"type": "object", "additionalProperties": true}
  }
}
